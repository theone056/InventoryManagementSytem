@{
}

<div class="card flex-nowrap m-2 mt-2 my-auto bg-info bg-opacity-50" style="width:16rem;">
    <div class="row g-0">
        <div class="col-3 my-auto">
            <i class="bi bi-box icons-big-size"></i>
        </div>
        <div class="col-9">
            <div class="card-body text-center">
                <h3>@Model.Value</h3>
                <span class="card-title">@Model.Title</span>
            </div>
        </div>
    </div>
</div>