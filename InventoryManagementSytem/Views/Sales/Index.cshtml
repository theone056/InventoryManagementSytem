@model SalesViewModel
@{
}
<h1>Sales</h1>

<div class="container-fluid">
    <table id="sales-table" class="table table-bordered table-responsive">
        <thead class="table-primary">
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Product Code
                </th>
                <th>
                    Transaction Date
                </th>
                <th>
                    Product Name
                </th>
                <th>
                    Price
                </th>
                <th>
                    Unit
                </th>
                <th>
                    Quantity
                </th>
                <th>
                    Total Sales
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var sale in Model.Sales)
            {
                <tr>
                    <td>
                        @sale.Id
                    </td>
                    <td>
                        @sale.ProductCode
                    </td>
                    <td>
                        @sale.TransactionDate
                    </td>
                    <td>
                        @sale.ProductName
                    </td>
                    <td>
                        @sale.Price
                    </td>
                    <td>
                        @sale.Unit
                    </td>
                    <td>
                        @sale.Qty
                    </td>
                    <td>
                        @sale.TotalSales
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts{
    <script src="~/js/Sales/SalesIndex.js"></script>
}