@model ProductModel

@{
}

<tr id="row-@Model.Code">
    <td>@Model.Code</td>
    <td>@Model.ProductName</td>
    <td><input name="qty-@Model.Code" id="qty-@Model.Code" type="number" onchange="Sales.OnChangeQty('@Model.Code','@Model.Price')" onkeyup="if(this.value>@Model.MaxStock)this.value = @Model.MaxStock" value="1" min="1" max="@Model.MaxStock"/></td>
    <td>@Model.Price</td>
    <td class="subtotal" id="subtotal-@Model.Code">@Model.Price</td>
    <td class="text-center">
        <a class="table-button-action" onclick="Sales.OnClickRemove('@Model.Code')">
            <h3><i class="bi bi-trash text-primary"></i></h3>
        </a>
    </td>
</tr>