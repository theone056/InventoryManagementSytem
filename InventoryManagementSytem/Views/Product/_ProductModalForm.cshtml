<form method="post"
      enctype="multipart/form-data"
      asp-controller="Product"
      asp-action="AddProductModal"
      data-ajax="true"
      data-ajax-method="post"
      data-ajax-loading="#loading"
      data-ajax-mode="replace"
      data-ajax-update="#product-table-container"
      data-ajax-success="Product.OnSuccess"
      data-ajax-failure="Product.OnFailure"
      id="product-form">
    <div class="modal fade" id="product-modal" tabindex="-1" aria-labelledby="productModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="productModalLabel">Add Product</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="product-modal-body">
                    <partial name="AddProductModal" model="new ProductModel()" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
</form>