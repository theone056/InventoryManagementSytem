@model List<ProductModel>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<table id="product-table" class="table table-bordered table-responsive">
    <thead>
        <tr>
            <th>Code</th>
            <th>Product Name</th>
            <th>Unit</th>
            <th>Selling Price</th>
            <th>Remarks</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Code</td>
                <td>@product.ProductName</td>
                <td>@product.Unit</td>
                <td>@product.Price</td>
                <td>@product.Remarks</td>
                <td>
                    <a class="table-button-action" onclick="Product.OnClickEdit('@product.Code')" data-bs-toggle="modal" data-bs-target="#product-modal">
                       <i class="bi bi-pencil"></i>
                    </a>
                    <a class="table-button-action" onclick="Product.OnClickDelete('@product.ProductName')" data-bs-toggle="modal" data-bs-target="#product-modal-delete">
                       <i class="bi bi-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>