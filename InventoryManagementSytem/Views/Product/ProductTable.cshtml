@using InventoryManagementSytem.Services.Models;
@model List<ProductModel>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<table id="product-table" class="table table-bordered table-responsive">
    <thead>
        <tr>
            <th>Code</th>
            <th>Product Name</th>
            <th>Unit</th>
            <th>Cost</th>
            <th>Selling Price</th>
            <th>Remarks</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.code</td>
                <td>@product.productName</td>
                <td>@product.unit</td>
                <td>@product.cost</td>
                <td>@product.sellingPrice</td>
                <td>@product.remarks</td>
                <td>
                    <a class="table-button-action" onclick="Product.OnClickEdit('@product.code')" data-bs-toggle="modal" data-bs-target="#product-modal">
                        <span class="material-symbols-outlined">
                            edit
                        </span>
                    </a>
                    <a class="table-button-action" onclick="Product.OnClickDelete('@product.productName')" data-bs-toggle="modal" data-bs-target="#product-modal-delete">
                        <span class="material-symbols-outlined">
                            delete
                        </span>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>